print("1.Area of rectangle")
print("2.Area of a triangle")
print("3.Area of a square")
print("4.Area of a circle")
ch=int(input("\n Enter your choice:"))
if(ch==1):
→ width=float(input('Enter the length of a rectangle:'))
→ height=float(input('Enter the breadth of a rectangle:'))
→ area=width*height
→ print("\nArea of a rectangle is:%0.2f"%area)
elif(ch==2):
→ b=float(input('Enter the base of a triangle:'))
→ h=float(input('Enter the height of a triangle:'))
→ area=0.5*(b*h) 
→ print("\nArea of a triangle is:%0.2f"%area)
elif(ch==3):
→ side=float(input('Enter the side of a square:'))
→ area=side*side
→ print("\nArea of a square is:%0.2f"%area)
elif(ch==4):
→ pi=3.14
→ radius=float(input('Enter the radius of a circle:'))
→ area=pi*radius*radius
→ print("\nArea of a circle is:%0.2f"%area)
else:
→ print("Wrong choice")